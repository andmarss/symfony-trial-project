{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <a href="{{ path('blog_index') }}">Назад</a>

    <p>ID {{ id }}</p>
    <h3>{{ post.title }}</h3>
    <p>{{ post.text }}</p>
    {{ 1000|price }}
    <p>
        {{ locale }}
    </p>
    <p>{{ message }}</p>


    <p>User: {{ app.user }}</p>
    <p>Request: {{ app.request }}</p>
    <p>Session started: {{ app.session.isStarted() }}</p>
    <p>Debug: {{ app.debug }}</p>
{% endblock %}