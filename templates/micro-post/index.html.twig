{% extends 'base.html.twig' %}

{% block body %}

    {% for post in posts %}

        <div class="media text-muted pt-3">
            <img alt="" class="mr-2" data-src="holder.js/32x32?text=MJ&bg=#e83e8c&fg=fff&size=8">
            <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-grey">
                <span class="d-block"><strong class="text-gray-dark">@username</strong> <small class="text-gray-dark"> &bull; {{ post.time|date('d/m/Y') }}</small></span>
                {{ post.text }}
            </p>
        </div>

    {% endfor %}

{% endblock %}